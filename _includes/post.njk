---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ date | dateIso }}">{{ date | dateDisplay }}</time>
      {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
          <a href="/tags/{{ tag | slug }}/" class="post-tag">{{ tag }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  {% if related_posts %}
  <div class="related-posts">
    <h3>Related Posts</h3>
    <ul>
      {% for post in related_posts %}
        <li><a href="{{ post.url }}">{{ post.title }}</a></li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
</article> 